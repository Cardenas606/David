##pto 8
parciales = float(input("Ingrese el promedio de parciales: "))
examen_final = float(input("Ingrese la nota del examen final: "))
trabajo_final = float(input("Ingrese la nota del trabajo final: "))

nota_final = (parciales * 0.55) + (examen_final * 0.30) + (trabajo_final * 0.15)
print(f"La nota final es: {nota_final}")

##pto 7
total = float(input("Ingrese el total de la compra: "))
descuento = total * 0.15
compra_final = total - descuento

print(f"El total de la compra con descuento es: {compra_final}")

##pto 8

import math

x1 = float(input("Ingrese x1: "))
y1 = float(input("Ingrese y1: "))
x2 = float(input("Ingrese x2: "))
y2 = float(input("Ingrese y2: "))

distancia = math.sqrt((x2 - x1)**2 + (y2 - y1)**2)
print(f"La distancia entre los puntos es: {distancia}")

##pto 9

import math

a = float(input("Ingrese un número: "))
raiz_cuadrada = math.sqrt(a)
raiz_cubica = a ** (1/3)

print(f"Raíz cuadrada: {raiz_cuadrada}")
print(f"Raíz cúbica: {raiz_cubica}")

##pto 10

num = input("Ingrese un número de dos cifras: ")
invertido = num[::-1]
print(f"El número invertido es: {invertido}")

##pto 11

a = input("Ingrese el valor de A: ")
b = input("Ingrese el valor de B: ")

a, b = b, a

print(f"El valor de A es {a} y el valor de B es {b}")

##pto 12

distancia = float(input("Ingrese la distancia (km): "))
v1 = float(input("Ingrese la velocidad del vehículo detrás (km/h): "))
v2 = float(input("Ingrese la velocidad del vehículo delante (km/h): "))

tiempo = distancia / abs(v1 - v2)
print(f"El tiempo en horas es: {tiempo}")
